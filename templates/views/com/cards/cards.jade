section#cards.com-cards.container
	h4.com-hottext.text-center
		| 热门内容
	.row
		.cards
			each card in data.cards
				.col-sm-6.col-md-3.col-lg-3
					.thumbnail
						a(href='/cards/#{card._id}', title='#{card.name}', target='_blank', onclick="_hmt.push(['_trackEvent', 'tile', 'click', 'codeguide'])")
							img(src='/images/placeholder.jpg', width='300', height='300', data-echo='#{card.cover.url}', alt='元子育儿')
						.caption
							p.com-card-title.text-center #{card.name}
							p.card-description
								| #{card.description}
							img.com-user-avatar.img-circle(src='/images/placeholder.jpg', width='300', data-echo='#{card.owner.avatar.url}', alt='元子育儿')
							span.com-user-nickname #{card.owner.nickname}
	.com-card-more.text-center
		a.btn.btn-default(href='/cards') 阅读更多
