extends ../layout/layout
block content
	section.com-pages-downloads
		.com-pages-downloads
			.com-downloads-img
				img(src="/images/apply.png", width='100%')
			.com-apply-content.container
				.row
					form.form-horizontal(data-toggle="validator", role='form', action='/apply' method="post")
						.form-group
							label.col-sm-4.control-label 姓名
							.col-sm-8
								input#nickname(type='text' required )
						.form-group
							label.col-sm-4.control-label 手机号码
							.col-sm-8
								input#mobile(type='number' pattern="^1[0-9]{10}$" required)
	
						.form-group
							label.col-sm-4.control-label 微信账号
							.col-sm-8
								input#weichart(type='text' required)
						.form-group
							label.col-sm-4.control-label 邮箱地址
							.col-sm-8
								input#email(type='email', required, data-error="无效邮箱")
								.help-block.with-errors
						.form-group
							label.col-sm-4.control-label 所在城市
							.col-sm-8
								input#city(type='text' required)
						.form-group
							label.col-sm-4.control-label 社区名称
							.col-sm-8
								input#neighborhood(type='text' required)
	
						.form-group
							label.col-sm-4.control-label 性别
							.col-sm-8
								label.radio-inline
									input#gender(type='radio', name='gender', value='m', checked='')
									|   男
								label.radio-inline
									input#gender(type='radio', name='gender', value='f')
									|   女
							
						.form-group
							label.col-sm-4.control-label 宝宝性别
							.col-sm-8
								label.radio-inline
									input#babyGender(type='radio', name='babyGender', value='m', checked='')
									|   男
								label.radio-inline
									input#babyGender(type='radio', name='babyGender', value='f')
									|   女
	
						.form-group
							label.col-sm-4.control-label 宝宝生日
							.col-sm-8
								input#birthday(type='text', value='')
						.form-group
							label.col-sm-4.control-label 全职在家看孩子
							.col-sm-8
								label.radio-inline
									input#isFullTime(type='radio', name='isFullTime', value='1', checked='')
									|   是
								label.radio-inline
									input#isFullTime(type='radio', name='isFullTime', value='0')
									|   否
						.form-group
							label.col-sm-4.control-label 育儿理念
							.col-sm-8
								textarea#idea(type='text', required)
						.form-group
							label.col-sm-4.control-label 自我介绍
							.col-sm-8
								textarea#selfIntroduction(type='text', required)
						.form-group.text-center
							button.btn.btn-success(type='submit') Submit
block scripts
	script(src='/js/validator.min.js')
	script.
		$(function () { $("input,select,textarea").not("[type=submit]").jqBootstrapValidation(); } );
