{
  "verbose": true,
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "*.*"
  ],
  "ext": "js json",
  "script": "keystone.js",
  "ignore": [
    "public/**",
    "views/**",
    "upload/**",
    "test/**",
    "tools/**",
    "node_modules/**",
    "idea/**",
    ".editorconfig",
    ".gitignore",
    ".jscsrc",
    ".jshintignore",
    ".jshintrc",
    "gulpfile.js"
  ]
}
